# Configuration settings for infrastructure scripts

# Kubernetes environments
KUBECONFIG_DEV=~/.kube/config-dev
KUBECONFIG_STAGING=~/.kube/config-staging
KUBECONFIG_PROD=~/.kube/config-prod

# OpenEBS
HOSTPATH_DIR=/var/openebs/local

# Minio
MINIO_ENDPOINT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=

# Ansible
ANSIBLE_DIR=/opt/ansible
INVENTORY_DIR=/opt/ansible/inventory

# Logging
LOG_DIR=/var/log/infra-scripts

# Notifications (Slack/Teams webhook)
WEBHOOK_URL=

# Thresholds
CPU_WARN=80
MEM_WARN=80
DISK_WARN=80
