# Configuration settings for infrastructure scripts
# Copy this file to settings.env and update values

# ------------------------------------------------------------------------------
# Kubernetes Environments
# ------------------------------------------------------------------------------
# Path to kubeconfig files for each environment
KUBECONFIG_DEV=~/.kube/config-dev
KUBECONFIG_STAGING=~/.kube/config-staging
KUBECONFIG_PROD=~/.kube/config-prod

# Default environment (dev|staging|prod)
K8S_ENV=dev

# ------------------------------------------------------------------------------
# OpenEBS Storage
# ------------------------------------------------------------------------------
# Hostpath directory for OpenEBS local storage
HOSTPATH_DIR=/var/openebs/local

# Disk usage warning threshold (percentage)
DISK_WARN=80

# ------------------------------------------------------------------------------
# Minio Configuration
# ------------------------------------------------------------------------------
# Minio endpoint URL
MINIO_ENDPOINT=https://minio.example.com

# Minio credentials (or use mc alias)
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=

# Minio client alias name
MINIO_ALIAS=myminio

# ------------------------------------------------------------------------------
# Ansible Configuration
# ------------------------------------------------------------------------------
# Ansible directory containing playbooks
ANSIBLE_DIR=/opt/ansible

# Inventory directory
INVENTORY_DIR=/opt/ansible/inventory

# Default inventory file for patching
INVENTORY_FILE=/etc/ansible/hosts

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
# Log directory for all scripts
LOG_DIR=/var/log/infra-scripts

# Enable verbose output (true|false)
VERBOSE=false

# ------------------------------------------------------------------------------
# Notifications
# ------------------------------------------------------------------------------
# Slack/Teams webhook URL for notifications
WEBHOOK_URL=

# ------------------------------------------------------------------------------
# Thresholds
# ------------------------------------------------------------------------------
# CPU usage warning threshold (percentage)
CPU_WARN=80

# Memory usage warning threshold (percentage)
MEM_WARN=80

# Load average warning threshold (per core)
LOAD_WARN=2.0

# Pod restart count threshold
RESTART_THRESHOLD=5

# Certificate expiry warning (days)
CERT_WARN_DAYS=30

# ------------------------------------------------------------------------------
# SSH Configuration
# ------------------------------------------------------------------------------
# SSH connection timeout (seconds)
SSH_TIMEOUT=10

# SSH options for remote commands
SSH_OPTS="-o ConnectTimeout=10 -o BatchMode=yes"

# ------------------------------------------------------------------------------
# Backup
# ------------------------------------------------------------------------------
# Route backup directory
ROUTE_BACKUP_DIR=/var/backup/routes

# Ansible logs directory
ANSIBLE_LOG_DIR=/var/log/ansible
